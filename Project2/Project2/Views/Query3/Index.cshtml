@model List<Todo>

@{
    ViewData["Title"] = "Query3";
}

<h2>Query3</h2>
<h4>Получить список (id, name) из списка todos которые выполнены для конкретного пользователя (по айди)</h4>

@if (Model != null)
{
    if (Model.Count != 0)
    {
        <div><a asp-controller="query3" asp-action="index">Back</a></div>
        <table>
            <tr>
                <td>Id</td>
                <td>Todo</td>
            </tr>
            @foreach (Todo t in Model)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Name</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div>no data</div>
        <div><a asp-controller="query3" asp-action="index">Back</a></div>
    }
}
else
{
    @using (Html.BeginForm("Index", "query3", FormMethod.Post))
    {
        <div>Enter id:</div>
        <input type="number" name="id" />
        <input type="submit" value="+">
    }
}