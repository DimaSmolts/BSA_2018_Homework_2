@model List<Post>

@{
    ViewData["Title"] = "Query1";
}

<h2>Query1</h2>
<h4>Получить количество комментов под постами конкретного пользователя (по айди) (список из пост-количество)</h4>



@if (Model != null)
{
    @if (Model.Count != 0)
    {
        <div><a asp-controller="Query1" asp-action="Index">Back</a></div>
        <table>
            <tr>
                <td>Post</td>
                <td>Comments</td>
            </tr>
            @foreach (Post p in Model)
            {
                <tr>
                    <td><a asp-controller="post" asp-action="index" asp-route-Id="@p.Id">@p.Title</a></td>
                    <td>@p.CommentList.Count</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div>no data</div>
        <div><a asp-controller="Query1" asp-action="Index">Back</a></div>
    }
}
else
{
    @using (Html.BeginForm("Index", "query1", FormMethod.Post))
    {
        <div>Enter id:</div>
        <input type="number" name="id" />
        <input type="submit" value="+">
    }
}
