@model List<Comment>
@{
    ViewData["Title"] = "Query2";
}

<div class="container">
    <h1>Query2</h1>
    <h4>Получить список комментов под постами конкретного пользователя (по айди), где body коммента < 50 символов (список из комментов)</h4>
</div>
<hr />

@if (Model != null)
{
    if (Model.Count != 0)
    {
        <div><a asp-controller="query2" asp-action="index">← Back</a></div>

        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Comments</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Comment c in Model)
                            {
                                <tr>
                                    <td>@c.Body</td>
                                </tr>
                            }
                        </tbody>
                     </table>
                    </div>
                </div>
            </div>
    }
    else
    {
         <div><a asp-controller="Query2" asp-action="Index">← Back</a></div>
         <h1 style="text-align:center">no data</h1>
    }
}
else
{
    @using (Html.BeginForm("Index", "query2", FormMethod.Post))
    {
         <div>Enter id:</div>
         <input type="number" name="id" />
         <input type="submit" value="+">
    }
}
